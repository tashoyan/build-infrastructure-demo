    <artifactId>package-resources</artifactId>
    <packaging>jar</packaging>
    <name>Package Resources</name>
    <description>Resources to put into the distribution package</description>

    <properties>
        <product.config.file>${distribution.product.short.name}-env.sh</product.config.file>
    </properties>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

    </build>

</project>
